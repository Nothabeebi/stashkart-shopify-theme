<div class="form-section">
  <h2>{{ section.settings.form_heading }}</h2>
  <form method="POST" action="{{ section.settings.form_action_url }}">
    <div class="form-row">
      <div class="form-group">
        <label for="name">{{ section.settings.name_label }} *</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="phone">{{ section.settings.phone_label }}</label>
        <input type="tel" id="phone" name="phone">
      </div>
      <div class="form-group">
        <label for="email">{{ section.settings.email_label }} *</label>
        <input type="email" id="email" name="email" required>
      </div>
    </div>

    <div class="form-group">
      <label>{{ section.settings.product_label }} *</label>
      <div class="checkbox-group">
        {% for product_option in section.settings.product_options %}
          <label><input type="radio" name="product" value="{{ product_option.value }}" {% if product_option.required %}required{% endif %}> {{ product_option.label }}</label>
        {% endfor %}
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="quantity">{{ section.settings.quantity_label }}*</label>
        <input type="number" id="quantity" name="quantity" required>
      </div>
      <div class="form-group">
        <label for="deadline">{{ section.settings.deadline_label }}</label>
        <input type="date" id="deadline" name="deadline">
      </div>
    </div>

    <div class="form-group">
      <label>{{ section.settings.design_option_label }} *</label>
      <div class="radio-group">
        {% for design_option in section.settings.design_options %}
          <label><input type="radio" name="design_option" value="{{ design_option.value }}" {% if design_option.required %}required{% endif %}> {{ design_option.label }}</label>
          {% if design_option.sub_text != blank %}
            <p class="sub-text">{{ design_option.sub_text }}</p>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="form-group">
      <label for="idea">{{ section.settings.idea_label }}*</label>
      <textarea id="idea" name="idea" rows="5" placeholder="{{ section.settings.idea_placeholder }}" required></textarea>
    </div>

    <div class="form-group file-upload">
      <label for="inspiration">{{ section.settings.inspiration_label }} *</label>
      <input type="text" id="inspiration" name="inspiration" placeholder="{{ section.settings.inspiration_placeholder }}" required>
      <button type="button" class="upload-button">
        {% if section.settings.upload_icon != blank %}
          <img src="{{ section.settings.upload_icon | img_url: '20x20' }}" alt="Upload" width="20" height="20">
        {% else %}
          <img src="https://dummyimage.com/20x20/000/fff&text=Clip" alt="Upload" width="20" height="20">
        {% endif %}
      </button>
    </div>

    <div class="form-group checkbox-agree">
      <label><input type="checkbox" name="agree" required> {{ section.settings.agree_label }}</label>
    </div>

    <button type="submit" class="submit-button">{{ section.settings.submit_button_text }}</button>
  </form>
</div>

