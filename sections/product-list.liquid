{% schema %}
{
  "name": "Product List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Bestsellers"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Product List",
      "blocks": []
    }
  ]
}
{% endschema %}

{% style %}
  .product-list-heading {
    font-size: 40px;
    font-weight: 400;
    text-align: left;
    margin-bottom: 30px;
    color: rgb(4, 120, 137);
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .product-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .product-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
  }

  .product-card img:hover {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    transition: box-shadow 0.3s ease;
  }

  .product-card a {
    text-decoration: none;
  }

  .product-title {
    font-size: 16px;
    font-weight: 500;
    color: #111;
  }

  .product-card .product-title {
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .product-card:hover .product-title {
    transform: scale(1.05);
    color: rgb(4, 120, 137);
  }

  @media screen and (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 480px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }

  .variant-select {
    padding: 8px;
    margin-top: 10px;
    width: 100%;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .btn-bestseller {
    margin-top: 10px;
    padding: 10px;
    background-color: #007a8c;
    color: white;
    font-weight: 600;
    border: none;
    width: 100%;
    cursor: pointer;
    border-radius: 6px;
  }

  .btn-bestseller:hover {
    background-color: #333;
  }

  /* Manually disable ATC shake animation plugin for Bestsellers Section */
  [cart-animator-animate] .product-card button[data-product-id],
  [cart-animator-animate] .product-card form[action*='/cart/add'] [type='submit'] {
    animation: none !important;
    -webkit-animation: none !important;
    animation-name: none !important;
    -webkit-animation-name: none !important;
  }
{% endstyle %}

<div class="page-width product-list-section">
  <h2 class="product-list-heading">{{ section.settings.heading }}</h2>

  {% if section.blocks.size > 0 %}
    <div class="product-grid">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        {% if product %}
          <div class="product-card">
            <form method="post" action="/cart/add">
              <input type="hidden" name="form_type" value="product">
              <input type="hidden" name="utf8" value="âœ“">

              <!-- Product Image + Title -->
              <a href="{{ product.url }}">
                <img
                  src="{{ product.featured_image | img_url: '500x500' }}"
                  alt="{{ product.title }}"
                  width="500"
                  height="500"
                  loading="lazy"
                >
              </a>
              <div class="product-title">{{ product.title }}</div>

              <!-- Variant Picker -->
              {% if product.variants.size > 1 %}
                <select name="id" class="variant-select">
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      <option value="{{ variant.id }}">{{ variant.title }}</option>
                    {% else %}
                      <option disabled>{{ variant.title }} - Sold Out</option>
                    {% endif %}
                  {% endfor %}
                </select>
              {% else %}
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              {% endif %}

              <!-- Add to Cart -->
              <button type="submit" class="btn-bestseller btn--full">Add to Cart</button>
            </form>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  {% else %}
    <p>No products selected.</p>
  {% endif %}
</div>
