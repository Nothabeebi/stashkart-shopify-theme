{{ 'custom-design-page.css' | asset_url | stylesheet_tag }}

<div class="hero-section" {% if section.settings.background_image != blank %}style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"{% endif %}>
  <div class="form-section-overlay">
    <h2>{{ section.settings.form_heading }}</h2>
    <form method="POST" action="{{ section.settings.form_action_url }}">
      <div class="form-row">
        <div class="form-group">
          <label for="name">{{ section.settings.name_label }} *</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
          <label for="email">{{ section.settings.email_label }} *</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="phone">{{ section.settings.phone_label }}</label>
          <input type="tel" id="phone" name="phone">
        </div>
      </div>

      <div class="form-group">
        <label>{{ section.settings.product_label }} *</label>
        <div class="checkbox-group product-options-grid">
          {% for product_option in section.blocks %}
            {% if product_option.type == 'product_option' %}
              <label class="checkbox-label">
                <input type="checkbox" name="product[]" value="{{ product_option.settings.value }}" {% if product_option.settings.required %}required{% endif %}>
                {{ product_option.settings.label }}
              </label>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="quantity">{{ section.settings.quantity_label }}*</label>
          <input type="number" id="quantity" name="quantity" required>
        </div>
        <div class="form-group">
          <label for="deadline">{{ section.settings.deadline_label }}</label>
          <input type="date" id="deadline" name="deadline">
        </div>
      </div>

      <div class="form-group">
        <label>{{ section.settings.design_option_label }} *</label>
        <div class="radio-group">
          {% for design_option in section.blocks %}
            {% if design_option.type == 'design_option' %}
              <label class="radio-label">
                <input type="radio" name="design_option" value="{{ design_option.settings.value }}" {% if design_option.settings.required %}required{% endif %}>
                {{ design_option.settings.label }}
                {% if design_option.settings.price != blank %}
                  <span class="price"> ({{ design_option.settings.price }})</span>
                {% endif %}
              </label>
              {% if design_option.settings.sub_text != blank %}
                <p class="sub-text">{{ design_option.settings.sub_text }}</p>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="form-group">
        <label for="idea">{{ section.settings.idea_label }}*</label>
        <textarea id="idea" name="idea" rows="2" placeholder="{{ section.settings.idea_placeholder }}" required></textarea>
      </div>

      <div class="form-group">
        <label for="inspiration">{{ section.settings.inspiration_label }}</label>
        <input type="text" id="inspiration" name="inspiration" placeholder="{{ section.settings.inspiration_placeholder }}">
        <p class="sub-text">{{ section.settings.inspiration_sub_text }}</p>
      </div>
      
      {% comment %} 
      <div class="form-group checkbox-agree">
        <label><input type="checkbox" name="agree" required> {{ section.settings.agree_label }}</label>
      </div> 
      {% endcomment %}

      <button type="submit" class="submit-button">{{ section.settings.submit_button_text }}</button>
    </form>
  </div>
</div>

