<style>
  .footer-banner {
    position: relative;
    padding: 100px 20px;
    text-align: center;
    overflow: hidden;
  }

  .footer-banner .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .footer-banner h2 {
    font-size: 2.2rem;
    margin-bottom: 10px;
  }

  .footer-banner p {
    font-size: 1.1rem;
    margin-bottom: 25px;
    color: #555;
  }

  .footer-banner .btn {
    display: inline-block;
    padding: 12px 20px;
    margin: 0 10px;
    border-radius: 5px;
    font-weight: bold;
    text-decoration: none;
  }

  .footer-banner .btn.primary {
    background-color: #4caf50;
    color: white;
  }

  .footer-banner .btn.secondary {
    background-color: #fff;
    color: #333;
    border: 1px solid #ccc;
  }

  .footer-banner .scattered-image {
    max-width: 150px;
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
  }

  /* Example positioning classes - you can extend these */
  .image-1 {
    top: 20px;
    left: 5%;
  }
  .image-2 {
    top: 80px;
    right: 10%;
  }
  .image-3 {
    bottom: 60px;
    left: 15%;
  }
  .image-4 {
    bottom: 30px;
    right: 5%;
  }
  .image-5 {
    top: 50%;
    left: 45%;
    transform: translate(-50%, -50%);
  }

  @media (max-width: 768px) {
    .footer-banner .scattered-image {
      width: 80px;
    }
  }
</style>

<div class="footer-banner" style="background-color: {{ section.settings.background_color }}">
  {% for block in section.blocks %}
    {% if block.settings.image %}
      <img
        class="scattered-image {{ block.settings.custom_class }}"
        src="{{ block.settings.image | image_url: width: block.settings.image.width }}"
        alt="Scattered Image"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        loading="lazy"
      >
    {% endif %}
  {% endfor %}

  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    {% if section.settings.button1_link and section.settings.button1_text != blank %}
      <a href="{{ section.settings.button1_link }}" class="btn primary">{{ section.settings.button1_text }}</a>
    {% endif %}
    {% if section.settings.button2_link and section.settings.button2_text != blank %}
      <a href="{{ section.settings.button2_link }}" class="btn secondary">{{ section.settings.button2_text }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Footer Banner",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f3eaff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Enjoy up your vacations in the best T-shirts"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "T-shirts that keep you moving."
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 link"
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 text",
      "default": "Contact Us"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Scattered Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "custom_class",
          "label": "Custom CSS class for positioning",
          "default": "image-1"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Footer Banner",
      "category": "Custom",
      "blocks": [
        {
          "type": "image",
          "settings": {
            "custom_class": "image-1"
          }
        },
        {
          "type": "image",
          "settings": {
            "custom_class": "image-2"
          }
        }
      ]
    }
  ]
}
{% endschema %}
