<style>
  .footer-banner {
    position: relative;
    padding: 100px 20px;
    text-align: center;
    overflow: hidden;
  }

  .footer-banner .container {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .footer-banner h2 {
    font-size: 3.2rem;
    margin-bottom: 10px;
  }

  .footer-banner p {
    font-size: 2.2rem;
    margin-bottom: 25px;
    color: #555;
  }

  .footer-banner .btn {
    display: inline-block;
    padding: 12px 40px;
    margin: 0 10px;
    border-radius: 30px;
    font-weight: bold;
    text-decoration: none;
  }

  .footer-banner .btn.primary {
    background-color: #4caf50;
    color: white;
  }

  .footer-banner .btn.secondary {
    background-color: #fff;
    color: #333;
    border: 1px solid #ccc;
  }

  /* Scattered Images */
  .footer-banner .scattered-images-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none; /* don't block buttons */
  }

  .footer-banner .scattered-image {
    position: absolute;
    max-width: 150px;
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
  }

  /* Desktop Placement */
  .image-1 {
    top: 20px;
    left: 40px;
  }
  .image-2 {
    top: 180px;
    left: 10px;
  }
  .image-3 {
    bottom: 30px;
    left: 200px;
  }
  .image-4 {
    bottom: 30px;
    right: 220px;
  }
  .image-5 {
    bottom: 100px;
    right: 100px;
    transform: translate(-50%, -50%);
  }
  .image-6 {
    bottom: 10px;
    right: 10px;
  }

  /* Responsive Tweaks */
  @media (max-width: 1220px) {
    .footer-banner h2 {
      font-size: 2.8rem;
      padding: 0 5vw;
    }

    .footer-banner p {
      font-size: 1.8rem;
      padding: 0 8vw;
    }

    .footer-banner .scattered-image {
      max-width: 100px;
    }

    .image-2{
      top: 160px;
      left: 20px;
    }

    .image-3 {
      top: auto;
      bottom: 40px;
      left: 140px;
    }
    .image-4 {
      top: auto;
      bottom: 140px;
      right: 160px;
    }
    .image-5 {
      top: 20px;
      right: 40px;
      transform: none;
    }
    .image-6 {
      bottom: 20px;
      right: 20px;
    }
  }

  @media (max-width: 768px) {
    .footer-banner h2 {
      font-size: 2.4rem;
      padding: 0 5vw;
    }

    .footer-banner p {
      font-size: 1.6rem;
      padding: 0 8vw;
    }

    .footer-banner .scattered-image {
      max-width: 80px;
    }

    .image-1 {
      top: 10px;
      left: 80px;
    }
    .image-2 {
      top: 160px;
      left: 40px;
    }
    .image-3 {
      bottom: 10px;
      left: 10px;
    }
    .image-4 {
      bottom: 160px;
      right: 60px;
    }
    .image-5 {
      top: 10px;
      right: 30px;
    }
    .image-6 {
      bottom: 10px;
      right: 10px;
    }
  }

  @media (max-width: 480px) {
    .footer-banner h2 {
      font-size: 2rem;
    }

    .footer-banner p {
      font-size: 1.4rem;
    }

    .footer-banner .btn {
      padding: 10px 20px;
      font-size: 1.4rem;
    }

    .footer-banner .scattered-image {
      max-width: 60px;
    }

    .image-1 {
      top: 20px;
      left: 30px;
    }
    .image-2 {
      top: 190px;
      left: 0px;
    }
    .image-3 {
      bottom: 20px;
      left: 40px;
    }
    .image-4 {
      bottom: 130px;
      right: 50px;
    }
    .image-5 {
      bottom: 80px;
      right: 20px;
    }
    .image-6 {
      bottom: 10px;
      right: 10px;
    }
  }
</style>

<div class="footer-banner" style="background-color: {{ section.settings.background_color }}">
  <div class="scattered-images-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <img
          class="scattered-image image-{{ forloop.index }}"
          src="{{ block.settings.image | image_url }}"
          {% comment %} alt="Scattered Image {{ forloop.index }}" {% endcomment %}
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% endif %}
    {% endfor %}
  </div>

  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    {% if section.settings.button1_link %}
      <a href="{{ section.settings.button1_link }}" class="btn primary">{{ section.settings.button1_text }}</a>
    {% endif %}
    {% if section.settings.button2_link %}
      <a href="{{ section.settings.button2_link }}" class="btn secondary">{{ section.settings.button2_text }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Footer Banner",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f3eaff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Enjoy up your vacations in the best T-shirts"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "T-shirts that keep you moving."
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 link"
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 text",
      "default": "Contact Us"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Scattered Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "custom_class",
          "label": "Custom CSS class for positioning",
          "default": "image-1"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Footer Banner",
      "category": "Custom",
      "blocks": [
        {
          "type": "image",
          "settings": {
            "custom_class": "image-1"
          }
        },
        {
          "type": "image",
          "settings": {
            "custom_class": "image-2"
          }
        }
      ]
    }
  ]
}
{% endschema %}
