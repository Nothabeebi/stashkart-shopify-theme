{% schema %}
{
  "name": "Footer Banner",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f3eaff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Enjoy up your vacations in the best T-shirts"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "T-shirts that keep you moving."
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 link"
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 text",
      "default": "Contact Us"
    },
    {
      "type": "header",
      "content": "Scattered Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    }
  ],
  "presets": [
    {
      "name": "Footer Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .footer-banner {
    position: relative;
    padding: 60px 20px;
    text-align: center;
    overflow: hidden;
  }
  .footer-banner .container {
    max-width: 800px;
    margin: 0 auto;
  }
  .footer-banner h2 {
    font-size: 2.2rem;
    margin-bottom: 10px;
  }
  .footer-banner p {
    font-size: 1.1rem;
    margin-bottom: 25px;
    color: #555;
  }
  .footer-banner .btn {
    display: inline-block;
    padding: 12px 20px;
    margin: 0 10px;
    border-radius: 5px;
    font-weight: bold;
    text-decoration: none;
  }
  .footer-banner .btn.primary {
    background-color: #4caf50;
    color: white;
  }
  .footer-banner .btn.secondary {
    background-color: #fff;
    color: #333;
    border: 1px solid #ccc;
  }
  .footer-banner .scattered-image {
    position: absolute;
    width: 120px;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
  }
  .footer-banner .image-1 {
    top: 20px;
    left: 5%;
  }
  .footer-banner .image-2 {
    top: 80px;
    right: 10%;
  }
  .footer-banner .image-3 {
    bottom: 60px;
    left: 15%;
  }
  .footer-banner .image-4 {
    bottom: 30px;
    right: 5%;
  }
  .footer-banner .image-5 {
    top: 50%;
    left: 45%;
    transform: translate(-50%, -50%);
  }
  @media (max-width: 768px) {
    .footer-banner .scattered-image {
      width: 80px;
    }
  }
</style>

<div class="footer-banner" style="background-color: {{ section.settings.background_color }}">
  {% if section.settings.image_1 %}
    <img
      class="scattered-image image-1"
      src="{{ section.settings.image_1 | image_url: width: 200 }}"
      alt="Image 1"
      width="{{ section.settings.image_1.width }}"
      height="{{ section.settings.image_1.height }}"
    >
  {% endif %}
  {% if section.settings.image_2 %}
    <img
      class="scattered-image image-2"
      src="{{ section.settings.image_2 | image_url: width: 200 }}"
      alt="Image 2"
      width="{{ section.settings.image_2.width }}"
      height="{{ section.settings.image_2.height }}"
    >
  {% endif %}
  {% if section.settings.image_3 %}
    <img
      class="scattered-image image-3"
      src="{{ section.settings.image_3 | image_url: width: 200 }}"
      alt="Image 3"
      width="{{ section.settings.image_3.width }}"
      height="{{ section.settings.image_3.height }}"
    >
  {% endif %}
  {% if section.settings.image_4 %}
    <img
      class="scattered-image image-4"
      src="{{ section.settings.image_4 | image_url: width: 200 }}"
      alt="Image 4"
      width="{{ section.settings.image_4.width }}"
      height="{{ section.settings.image_4.height }}"
    >
  {% endif %}
  {% if section.settings.image_5 %}
    <img
      class="scattered-image image-5"
      src="{{ section.settings.image_5 | image_url: width: 200 }}"
      alt="Image 5"
      width="{{ section.settings.image_5.width }}"
      height="{{ section.settings.image_5.height }}"
    >
  {% endif %}
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    <a href="{{ section.settings.button1_link }}" class="btn primary">{{ section.settings.button1_text }}</a>
    <a href="{{ section.settings.button2_link }}" class="btn secondary">{{ section.settings.button2_text }}</a>
  </div>
</div>
