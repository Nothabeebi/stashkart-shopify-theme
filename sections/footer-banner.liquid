<style>
  .footer-banner {
    position: relative;
    padding: 100px 20px;
    text-align: center;
    overflow: hidden;
  }

  .footer-banner .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .footer-banner h2 {
    font-size: 3.2rem;
    margin-bottom: 10px;
  }

  .footer-banner p {
    font-size: 2.2rem;
    margin-bottom: 25px;
    color: #555;
  }

  .footer-banner .btn {
    display: inline-block;
    padding: 12px 40px;
    margin: 0 10px;
    border-radius: 30px;
    font-weight: bold;
    text-decoration: none;
  }

  .footer-banner .btn.primary {
    background-color: #4caf50;
    color: white;
  }

  .footer-banner .btn.secondary {
    background-color: #fff;
    color: #333;
    border: 1px solid #ccc;
  }

  .footer-banner {
    position: relative;
    padding: 60px 20px;
    text-align: center;
    overflow: hidden;
  }

  .footer-banner .scattered-images-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .footer-banner .scattered-image {
    position: absolute;
    max-width: 150px;
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
  }

  /* Example placement */
  .footer-banner .image-1 {
    top: 2px;
    left: 40px;
  }
  .footer-banner .image-2 {
    top: 180px;
    left: 0;
  }
  .footer-banner .image-3 {
    bottom: 60px;
    left: 250px;
  }

  .footer-banner .image-4 {
    bottom: 0;
    right: 250px;
  }

  .footer-banner .image-5 {
    bottom: 50px;
    right: 100px;
    transform: translate(-50%, -50%);
  }

  .footer-banner .image-6 {
    bottom: 10px;
    right: 0px;
  }

  /* Layer title/buttons above images */
  .footer-banner .container {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 768px) {
    .footer-banner .scattered-image {
      width: 80px;
    }
  }
</style>

<div class="footer-banner" style="background-color: {{ section.settings.background_color }}">
  <div class="scattered-images-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <img
          class="scattered-image image-{{ forloop.index }}"
          src="{{ block.settings.image | image_url }}"
          alt="Scattered Image {{ forloop.index }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% endif %}
    {% endfor %}
  </div>

  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    {% if section.settings.button1_link %}
      <a href="{{ section.settings.button1_link }}" class="btn primary">{{ section.settings.button1_text }}</a>
    {% endif %}
    {% if section.settings.button2_link %}
      <a href="{{ section.settings.button2_link }}" class="btn secondary">{{ section.settings.button2_text }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Footer Banner",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f3eaff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Enjoy up your vacations in the best T-shirts"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "T-shirts that keep you moving."
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 link"
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 text",
      "default": "Contact Us"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Scattered Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "custom_class",
          "label": "Custom CSS class for positioning",
          "default": "image-1"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Footer Banner",
      "category": "Custom",
      "blocks": [
        {
          "type": "image",
          "settings": {
            "custom_class": "image-1"
          }
        },
        {
          "type": "image",
          "settings": {
            "custom_class": "image-2"
          }
        }
      ]
    }
  ]
}
{% endschema %}
